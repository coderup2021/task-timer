    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "5.4.7",
    "vite-plugin-doubleshot": "0.0.17",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
